generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//----------------------------------- desde aqui el modelo de BD
model User {
  id        Int    @id @default(autoincrement())
  name      String
  lastname  String
  email     String @unique
  cellphone String?

  @@map(name: "users")
}

model Profile {
  id   Int    @id @default(autoincrement())
  name String

  @@map(name: "profiles")
}

model Service {
  id         Int     @id @default(autoincrement())
  name       String
  decription String
  price      Float
  status     Boolean

  @@map(name: "services")
}