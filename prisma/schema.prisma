generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

//----------------------------------- desde aqui el modelo de BD
model User {
  id        Int       @id @default(autoincrement())
  name      String
  lastname  String
  email     String    @unique
  cellphone String?
  profile   Profile?
  services  Service[]

  @@map(name: "users")
}

model Profile {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])

  @@map(name: "profiles")
}

model Service {
  id         Int     @id @default(autoincrement())
  name       String
  decription String
  price      Float
  status     Boolean
  userId     Int
  user       User    @relation(fields: [userId], references: [id])

  @@map(name: "services")
}
